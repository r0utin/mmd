<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/crMain"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:lottie_rawRes="@raw/sp"
            app:lottie_autoPlay="true"
            app:lottie_loop="false" />

        <ImageView
            android:layout_width="@dimen/value_150"
            android:layout_height="@dimen/value_40"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/value_50"
            android:layout_marginLeft="@dimen/value_20"
            android:layout_marginRight="@dimen/value_20"
            android:src="@drawable/logo"
            android:layout_marginEnd="@dimen/value_20"
            android:layout_marginStart="@dimen/value_20" />


        <comm.hyperonline.techsh.customview.textview.TextViewRegular
            android:id="@+id/tvSplashText"
            style="@style/txt_color_primary_micro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="@dimen/value_10"
            android:gravity="bottom|center"
            android:text="به اسمارت خوش آمدید"
            android:textColor="@color/white"/>
    </LinearLayout>




</androidx.coordinatorlayout.widget.CoordinatorLayout>
