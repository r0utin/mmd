<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/ivIntro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9.9"
            android:layout_marginBottom="5dp"
            app:lottie_rawRes="@raw/onpy"
            app:lottie_autoPlay="true"
            app:lottie_loop="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".1"
            android:gravity="center"
            android:orientation="vertical">

            <comm.hyperonline.techsh.customview.textview.TextViewRegular
                android:id="@+id/tvTitle"
                style="@style/txt_black_large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:alpha="0.8"
                android:gravity="center"
                android:text="E-Commerce App"
                android:textSize="18sp" />

            <comm.hyperonline.techsh.customview.textview.TextViewLight
               android:id="@+id/tvDescription"
                style="@style/txt_gray_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/value_10"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/value_2"
                android:text="E-Commerce application templete  buy this code  templete in codecanyon" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>
