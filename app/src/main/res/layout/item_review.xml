<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="@dimen/value_5"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="h,2:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <comm.hyperonline.techsh.customview.textview.TextViewRegular
                android:id="@+id/tvRatting"
                style="@style/txt_white_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/gray_corner_round_button"
                android:drawablePadding="@dimen/value_3"
                android:gravity="center"
                android:paddingStart="@dimen/value_5"
                android:paddingLeft="@dimen/value_5"
                android:paddingTop="@dimen/value_1"
                android:paddingEnd="@dimen/value_5"
                android:paddingRight="@dimen/value_5"
                android:paddingBottom="@dimen/value_1"
                android:text=""
                android:textColor="@color/white"
                app:drawableEndCompat="@drawable/ic_star_white"
                app:layout_constraintEnd_toEndOf="@+id/tvReview"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/tvReview"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="spread_inside" />

            <comm.hyperonline.techsh.customview.textview.TextViewRegular
                android:id="@+id/tvName"
                style="@style/txt_gray_small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center|start"
                android:text="15"
                android:textColor="@color/black"
                android:textAlignment="viewStart"
                android:textDirection="locale"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tvReview" />


            <comm.hyperonline.techsh.customview.textview.TextViewRegular
                android:id="@+id/tvReview"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="9dp"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="9dp"
                android:layout_marginRight="9dp"
                android:layout_marginBottom="8dp"
                android:gravity="start"
                android:text=""
                android:textColor="@color/black"
                android:textAlignment="viewStart"
                android:textDirection="locale"
                app:layout_constraintBottom_toTopOf="@+id/tvName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvRatting" />

            <comm.hyperonline.techsh.customview.textview.TextViewLight
                android:id="@+id/tvTime"
                style="@style/txt_gray_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="start"
                android:text=""
                android:textColor="@color/black"
                android:textAlignment="viewStart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tvReview" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>